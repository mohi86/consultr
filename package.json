{
  "name": "consultralph",
  "version": "0.1.0",
  "main": "electron/main.cjs",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "desktop:dev": "concurrently -k \"cross-env NEXT_PUBLIC_APP_MODE=self-hosted next dev --turbopack\" \"wait-on http-get://127.0.0.1:3000 && cross-env ELECTRON_RENDERER_URL=http://127.0.0.1:3000 NEXT_PUBLIC_APP_MODE=self-hosted electron .\"",
    "desktop:build:web": "cross-env BUILD_TARGET=desktop NEXT_PUBLIC_APP_MODE=self-hosted next build",
    "desktop:prepare": "node electron/scripts/prepare-standalone.cjs",
    "desktop:start": "cross-env NEXT_PUBLIC_APP_MODE=self-hosted electron .",
    "desktop:dist": "npm run desktop:build:web && npm run desktop:prepare && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win nsis"
  },
  "dependencies": {
    "@types/react-file-icon": "^1.0.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.511.0",
    "marked": "^17.0.1",
    "next": "^15.5.12",
    "papaparse": "^5.5.3",
    "posthog-js": "^1.345.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-file-icon": "^1.6.0",
    "react-markdown": "9.1.0",
    "remark-gfm": "^4.0.1",
    "resend": "^6.9.1",
    "tailwind-merge": "^3.4.0",
    "valyu-js": "^2.5.2",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@tailwindcss/postcss": "^4.1.4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20",
    "@types/papaparse": "^5.5.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "electron": "^36.9.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "^15.5.12",
    "tailwindcss": "^4.1.4",
    "typescript": "^5",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.consultr.desktop",
    "productName": "ConsultR",
    "asar": true,
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "!node_modules"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": "standalone",
        "filter": [
          "**/*",
          "!.env"
        ]
      }
    ],
    "extraMetadata": {
      "main": "electron/main.cjs",
      "dependencies": {}
    },
    "npmRebuild": false,
    "win": {
      "signAndEditExecutable": false,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
